{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "playwright"],
    "paths": {
      "root/*": ["./*"],
      "@tests/*": ["./e2e_tests/tests/*"],
      "@utils/*": ["./e2e_tests/utils/*"],
      "@test-data/*": ["./e2e_tests/test-data/*"],
      "@pages/*": ["./e2e_tests/pages/*"],
      "@fixtures/*": ["./e2e_tests/fixtures/*"],
      "@env-config/*": ["./e2e_tests/env-config/*"]
    }
  },
  "exclude": ["node_modules", "dist","assets/**/*.js", "coverage", "test_results", "playwright.config.ts", "allure-report/**/*.js"],
  "include": ["**/*.js", "**/*.ts",  "tests", "utils", "test-data", "pages", "fixtures","env-config","eslint.config.js"]
}