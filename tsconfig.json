{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "playwright"]
  },
  "exclude": ["node_modules", "dist","assets/**/*.js", "coverage", "test_results", "playwright.config.ts", "allure-report/**/*.js"],
  "include": ["**/*.js", "**/*.ts",  "tests", "utils", "data", "utils", "pages", "fixtures "]
}